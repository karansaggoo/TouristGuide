<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_message"
    android:layout_margin="8dp"
    >
        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/gray"
            android:padding="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgLayoutSender"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:background="@color/gray"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nameImageViewSender"
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/photoImageViewSender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                         />
                    <TextView
                        android:id="@+id/timeStampPhotoSender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="frdc4fre"
                        android:textColor="@color/black"
                        android:layout_gravity="end"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/msgLayoutSender"
                android:background="@color/gray"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nameTextViewSender"
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                     />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/messageTextViewSender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/gray"
                        android:layout_weight="0"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        tools:text="Message" />
                    <TextView
                        android:id="@+id/timeStampSender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textColor="@color/black"
                        android:layout_gravity="bottom"
                        android:layout_margin="2dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                         />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgLayout"
                android:background="@color/gray"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nameImageView"
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/photoImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true" />
                    <TextView
                        android:id="@+id/timeStampPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textColor="@color/black"
                        android:layout_gravity="end"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:id="@+id/msgLayout"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:textColor="@color/orange"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="Name" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/messageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/gray"
                        android:layout_weight="0"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        tools:text="Message" />
                    <TextView
                        android:id="@+id/timeStamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:textColor="@color/black"
                        android:layout_gravity="bottom"
                        android:layout_margin="2dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        tools:text="timestamp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>








</RelativeLayout>